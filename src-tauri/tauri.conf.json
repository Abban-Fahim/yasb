{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "devPath": "http://localhost:4200/",
    "beforeDevCommand": "npm run web:serve",
    "beforeBuildCommand": "npm run web:prod",
    "distDir": "../dist"
  },
  "package": {
    "productName": "yasb",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true
      }
    },
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.denBot.yasb",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "config.yaml",
        "styles.scss"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "cli": {
      "description": "A highly configurable status bar for Windows.",
      "beforeHelp": "Yet Another Status Bar",
      "args": [
        {
          "name": "config",
          "short": "c",
          "takesValue": true,
          "description": "The path to a configuration file"
        },
        {
          "name": "styles",
          "short": "s",
          "takesValue": true,
          "description": "The path to a SCSS stylehseet"
        },
        {
          "name": "verbose",
          "short": "v",
          "takesValue": false,
          "description": "Show verbose logging information"
        }
      ]
    }
  }
}